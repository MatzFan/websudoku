<div id="sudoku">
  <form action="/" method="post">
    <!-- one div for each row -->
    <% 3.times do |row| %>
      <div class='row'>
      <!-- we want to create separate div elements for boxes to style them using CSS -->
        <% 3.times do |box| %>
          <div class='box'>
          <!-- each box will have 9 cells -->
            <% 3.times do |cell_row| %>
              <div class='cell-row'>
              <% 3.times do |cell| %>
               <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
               <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
    <button>Check solution</button>
  </form>
  <form action="/solution" method="get">
    <button>submit Show Solution</button>
  </form>
  <form action="/" method="post">
    <button> Get Easy Puzzle</button>
  </form>
   <form action="/" method="post">
    <button>Get Hard Puzzle</button>
  </form>
  <a href="/help">Help</a>
</div>
